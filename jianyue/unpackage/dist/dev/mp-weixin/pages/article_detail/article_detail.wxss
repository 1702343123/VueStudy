
.content {
	margin-bottom: 10px;
	margin-top: 10px;
	padding: 5px;
	border-bottom: 1px solid #eee;
}
.article-title {
	font-size: 15px;
	font-weight: 600;
	/* font-family: "黑体"; */
}
.article-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	height: 30px;
}
.avatar {
	width: 30px;
	height: 30px;
	border-radius: 50%;
	margin-right: 5px;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
}
.nickname {
	line-height: 30px;
	/* color: #888888; */
}
.info-time-text {
	line-height: 30px;
	color: #888888;
}
.commentTime{
	color: #888888;
}
.img-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
}
.img-item {
	width: 100%;
	height: 150px;
	margin-bottom: 5px;
}
.img-item image {
	width: 100%;
	height: 100%;
	border-radius: 5px;
}
.comment-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	border-bottom: 1px solid #eee;
	margin-bottom: 10px;
	padding: 5px;
}
.comment-item .left {
	-webkit-box-flex: 1;
	-webkit-flex: 1 1 15%;
	    -ms-flex: 1 1 15%;
	        flex: 1 1 15%;
}
.comment-item .right {
	-webkit-box-flex: 1;
	-webkit-flex: 1 1 85%;
	    -ms-flex: 1 1 85%;
	        flex: 1 1 85%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
}
.comment-box {
	border: 1px solid #fff;
	border-radius: 5px;
	background-color: #eee;
}
.follow-btn {
	height: 30px;
	width: 70px;
	font-size: 12pt;
	text-align: center;
	padding-bottom: 20px;
	margin-right: 0px;
	line-height: 30px;
}
.cancel {
	background-color: #aaa;
}

